<div class="container-fluid mt-3">
  <p>You want to create a gossip. You can do it now !</p>
  <%= form_for @gossip do |f| %>
    <div class="row">
      <div class="col-xs col-sm-3">
        <div class="form-group">
          <div>
            <label for="title" class="col-form-label">Title : </label>
            <%= f.text_field :title, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-6">
        <div class="form-group">
          <div>
            <label for="content" class="col-form-label">Content : </label>
            <%= f.text_area :content, rows: 5, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <%= submit_tag "Send", class: "btn btn-info btn-sm" %>
  <% end %>

  <% if @gossip.errors.any? %>
    <div class="mt-3 alert alert-danger">
      <p>Gossip creation faild for the following reason(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %>.</li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>