<div class="container-fluid mt-3">
<p>You can create a new city here.</p>
<%= form_for @city do |f| %>
  <div class="form-group row">
    <div class="col-xs col-sm-6 col-md-4">
      <%= f.label 'name', 'Name :', class: 'col-form-label' %>
      <%= f.text_field :name, class: 'form-control form-control-sm' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs col-sm-6 col-md-4">
      <%= f.label 'zip_code', 'Zip code :' %>
      <%= f.text_field :zip_code, class: 'form-control form-control-sm' %>
    </div>
  </div>
  <%= submit_tag 'Create', class: 'btn btn-info mt-3' %>
<% end %>

<% if @city.errors.any? %>
  <div class="alert alert-danger mt-3 w-75">
    <ul>
      <% @city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>