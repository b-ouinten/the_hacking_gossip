<div class="container-fluid mt-3">
  <p>Hi there, fill in the form and join us !</p>
  <%= form_for @user do |f| %>
    <div class="row">
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
          <div>
            <%= f.label 'first_name', 'First name :', class: 'col-form-label' %>
            <%= f.text_field :first_name, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
          <div>
            <%= f.label 'last_name', 'Last name :', class: 'col-form-label' %>
            <%= f.text_field :last_name, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
          <div>
            <%= f.label 'email', 'Email : ' %>
            <%= f.text_field :email, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
      <div class="col-xs col-sm-4">
        <div class="form-group">
          <div>
            <%= f.label 'age', 'Age : ' %>
            <%= f.text_field :age, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-6">
        <div class="form-group">
          <div>
            <%= f.label 'description', 'Description :', class: 'col-form-label' %>
            <%= f.text_area :description, rows: 3, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
          <%= f.label 'city_id', 'City : ' %>
          <%= select_tag 'city_id', options_for_select(@cities.collect { |u| [u.name, u.id] }), prompt: 'Please select a city', class: 'form-control form-control-sm' %>
        </div>
      </div>
      <div class="col-xs col-sm-6 pt-sm-3">
        <%= link_to "Create a new city", new_city_path, class: 'btn btn-info btn-sm mt-sm-3 mb-3' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
            <%= f.label 'password', 'Password : ', class: 'col-form-label' %>
            <%= f.password_field :password, class: "form-control form-control-sm" %>
        </div>
      </div>
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
            <%= f.label 'password_confirmation', 'Password confirmation :', class: 'col-form-label' %>
            <%= f.password_field :password_confirmation, class: "form-control form-control-sm" %>
        </div>
      </div>
    </div>
    <%= submit_tag "Sign up", class: "btn btn-info btn-sm" %>
  <% end %>

  <% if @user.errors.any? %>
    <div class="mt-3 alert alert-danger">
      <p>User creation faild for the following reason(s) :</p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %>.</li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>